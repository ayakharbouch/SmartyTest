<style>
    .patient-table-container {
      background-color: #ffffff; /* White background */
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Subtle shadow */
      border-radius: 10px;
      padding: 20px;
      margin-top: 20px;
      border: 1px solid #e0e0e0; /* Light border */
    }
  
    .patient-table-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }
  
    .patient-table-header input {
      padding: 10px;
      width: 200px;
      border: 1px solid #e0e0e0;
      border-radius: 5px;
    }
  
    .patient-table-header .filters,
    .patient-table-header .download {
      background-color: #0f766e;
      color: #ffffff;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background-color 0.3s ease;
    }
  
    .patient-table-header .filters:hover,
    .patient-table-header .download:hover {
      background-color: #134e4a; /* Darker teal for hover */
    }
  
    .patient-table {
      width: 100%;
      border-collapse: collapse;
    }
  
    .patient-table th,
    .patient-table td {
      text-align: left;
      padding: 12px 15px;
      border-bottom: 1px solid #e0e0e0; /* Light row separator */
    }
  
    .patient-table th {
      background-color: #f8f9fa; /* Light gray header background */
      font-weight: bold;
      color: #555555;
    }
  
    .patient-table tbody tr:hover {
      background-color: #f1f5f9; /* Subtle hover effect for rows */
    }
  
    .pagination {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-top: 15px;
    }
  
    .pagination span {
      margin: 0 5px;
      font-size: 0.9rem;
      color: #555555;
    }
  
    .pagination button {
      padding: 5px 10px;
      border: none;
      background-color: #e0e0e0;
      color: #555555;
      border-radius: 3px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
  
    .pagination button:hover {
      background-color: #d1d5db; /* Slightly darker gray */
    }
  
    .pagination button.active {
      background-color: #0f766e; /* Active teal */
      color: #ffffff;
    }
  </style>
  
