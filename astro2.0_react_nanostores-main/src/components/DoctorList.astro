<style>
    .doctor-list-container {
      background-color: #ffffff; /* White background */
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Subtle shadow */
      border-radius: 10px;
      padding: 20px;
      margin-top: 20px;
      border: 1px solid #e0e0e0; /* Light border */
    }
  
    .doctor-list-header {
      font-size: 1.2rem;
      font-weight: bold;
      color: #0f766e; /* Teal text */
      margin-bottom: 15px;
    }
  
    .doctor-search {
      margin-bottom: 20px;
    }
  
    .doctor-search input {
      padding: 10px;
      width: 100%;
      border: 1px solid #e0e0e0;
      border-radius: 5px;
    }
  
    .doctor-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); /* Responsive grid */
      gap: 15px;
    }
  
    .doctor-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #f8f9fa; /* Light gray background */
      border: 1px solid #e0e0e0;
      border-radius: 10px;
      padding: 15px;
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
  
    .doctor-card:hover {
      transform: translateY(-5px); /* Slight lift on hover */
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15); /* Enhanced shadow */
    }
  
    .doctor-card img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      margin-bottom: 10px;
      object-fit: cover;
    }
  
    .doctor-name {
      font-size: 1rem;
      font-weight: bold;
      color: #0f766e; /* Teal text */
      margin-bottom: 5px;
    }
  
    .doctor-specialty {
